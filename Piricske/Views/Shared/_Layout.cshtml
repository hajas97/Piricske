<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Piricske 175</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/Piricske.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@600;700;900&family=Quicksand:wght@400;500;600;700&display=swap"
          rel="stylesheet">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <header class="header" data-header>
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img class="logo" src="../images/logo/piricskelogo.svg" alt="Piricske" />
            </a>
            <button class="menu-toggle-btn" data-nav-toggle-btn>
                <ion-icon name="menu-outline"></ion-icon>
            </button>
            <nav class="navbar">
                <ul class="navbar-list">
@*                    <li>
                        <a class="navbar-link" asp-area="" asp-controller="Home" asp-action="Index">A szállásról</a>
                    </li>*@
                    <li>
                        <a class="navbar-link" href="#hero">A szállásról</a>
                    </li>
                    <li>
                        <a class="navbar-link" href="#Galéria">Galéria</a>
                    </li>
                    <li>
                        <a class="navbar-link" href="#Foglalás">Foglalás</a>
                    </li>
                    <li>
                        <a class="navbar-link" href="#Kapcsolat">Kapcsolat</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container">
            &copy; 2023 - Tamás Hájas </>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
