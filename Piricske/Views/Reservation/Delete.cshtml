@model Piricske.Models.Reservation

@{
    ViewData["Title"] = "Delete";
}
<div class="container">

<h1>Foglalás törlése</h1>

<h3>Biztosan törölni szeretnéd a foglalást?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ügyfél neve:
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerName
        </dd>

        <dt class="col-sm-2">
            Érkezési dátum:
        </dt>
        <dd class="col-sm-10">
            @Model.ArrivalDate
        </dd>

        <dt class="col-sm-2">
            Távozási dátum:
        </dt>
        <dd class="col-sm-10">
            @Model.DepartureDate
        </dd>

        <dt class="col-sm-2">
            Tartózkodás ideje:
        </dt>
        <dd class="col-sm-10">
            @Model.Duration
        </dd>

        <dt class="col-sm-2">
            Foglalt:
        </dt>
        <dd class="col-sm-10">
            @Model.IsReserved
        </dd>

        <dt class="col-sm-2">
            E-mail:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>

        <dt class="col-sm-2">
            Telefonszám:
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>

    </dl>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Vissza a listára</a>
        </div>
    </form>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
