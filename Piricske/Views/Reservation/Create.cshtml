@model Piricske.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<div class="container">
<h1>Új foglalás</h1>

    <form asp-action="Create">

        <div class="form-group">
            <label asp-for="CustomerName" class="control-label">Vendég neve</label>
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ArrivalDate" class="control-label">Érkezés időpontja</label>
            <input asp-for="ArrivalDate" class="form-control" />
            <span asp-validation-for="ArrivalDate" class="text-danger"></span>
        </div>
        <div class="form-group"> 
            <label asp-for="DepartureDate" class="control-label">Távozás időpontja</label>
            <input asp-for="DepartureDate" class="form-control" />
            <span asp-validation-for="DepartureDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">E-mail cím</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label">Telefonszám</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Vissza az időpontokhoz</a>
    </div>
 </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}