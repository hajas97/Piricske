@model LoginViewModel


<div class="container-fluid">
    <h2>Bejelentkezés</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email")
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm", placeholder = "Email" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Jelszó")
            <div class="col-sm-5">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm", placeholder = "Jelszó" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.RememberMe, "Emlékezz rám", new { @class = "form-check-label" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-sm">Bejelentkezés</button>
            </div>
        </div>
    }
</div>

